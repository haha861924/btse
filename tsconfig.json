{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["jest", "@types/jest", "node", "vue"]
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "src/**/*.js"],
  "exclude": ["node_modules"]
}
